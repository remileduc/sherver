# systemd service unit file that starts sherver.sh
[Unit]
Description=Start sherver website
After=multi-user.target

[Service]
Type=simple

User=sherver
Group=sherver

WorkingDirectory=/home/sherver/sherver/
ExecStart=/home/sherver/sherver/sherver.sh
ExecStop=/usr/bin/bash -c "kill $(cat /tmp/sherver.pid) && rm -f /tmp/sherver.pid /tmp/sherver.log"

Restart=on-failure

[Install]
WantedBy=multi-user.target
